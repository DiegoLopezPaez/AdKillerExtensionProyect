{
  "manifest_version": 3,
  "name": "Ad Killer",
  "description": "Extension para mutear ads en audio en tiempo real.",
  "version": "1.0",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": {
      "48": "images/icon48.png",
      "128": "images/logo.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}